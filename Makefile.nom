## Helm
helm: async lisp/helm/helm.el

lisp/helm/helm.el: name=helm-3.6.0
lisp/helm/helm.el:
	wget https://github.com/emacs-helm/helm/archive/v3.6.0.tar.gz ${wget_opts} -O ${name}.tar.gz
	tar xzvf ${name}.tar.gz
	mkdir -p $(dir $@); cp -r ${name}/* $(dir $@)
	rm -rf ${name} ${name}.tar.gz
	cd $(dir $@); EMACSLOADPATH="$(PWD)/lisp/async:" make

