## Hightlight
bm: lisp/bm/bm.el

lisp/bm/bm.el: name=bm-20190807.1217
lisp/bm/bm.el:
	wget https://melpa.org/packages/${name}.tar ${wget_opts} -O ${name}.tar
	tar xvf ${name}.tar
	mkdir -p $(dir $@); cp -r ${name}/* $(dir $@)
	rm -rf ${name} ${name}.tar

